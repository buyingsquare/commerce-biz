{
	"name": "buyingsquare/commerce-biz",
	"description": "Professional, full-featured and ultra fast SlimPHP e-commerce package for (TV-approved) online shops",
	"homepage": "https://aimeos.org/SlimPHP",
	"type": "library",
	"license": "LGPL-3.0-or-later",
	"keywords": ["aimeos", "slim", "slimphp", "e-commerce", "ecommerce", "TV", "shop"],
	"support": {
		"source": "https://github.com/Aimeos/aimeos-slim",
		"issues": "https://github.com/Aimeos/aimeos-slim/issues",
		"forum": "https://aimeos.org/help",
		"wiki": "https://aimeos.org/docs"
	},
	"prefer-stable": true,
	"minimum-stability": "dev",
	"require": {
		"php": "~7.1",
		"buyingsquare/commerce-core": "dev-master",
		"buyingsquare/commerce-ext-slim": "dev-master",
		"buyingsquare/commerce-ext-monolog": "dev-master",
		"buyingsquare/commerce-ext-gettext": "dev-master",
		"buyingsquare/commerce-ext-twig": "dev-master",
		"slim/slim": "~3.3",
		"slim/twig-view": "~2.0",
		"akrabat/ip-address-middleware": "^0.5"
	},
	"require-dev": {
		"phpunit/phpunit": "~7.0||~8.0",
		"php-coveralls/php-coveralls": "~2.0"
	},
	"autoload": {
		"psr-4": {
			"Aimeos\\Slim\\": "app/",
			"Aimeos\\Client\\Html\\": "client/html/src/Client/Html/",
			"Aimeos\\Client\\JsonApi\\": "client/jsonapi/src/Client/JsonApi/",
			"Aimeos\\Controller\\Common\\": "controller/jobs/src/Controller/Common/",
			"Aimeos\\Controller\\Frontend\\": "controller/frontend/src/Controller/Frontend/",
			"Aimeos\\Controller\\Jobs\\": "controller/jobs/src/Controller/Jobs/"
		},
		"classmap": [
			"client/html/src",
			"client/jsonapi/src",
			"controller/frontend/src",
			"controller/jobs/src",
			"controller/common/src",
			"lib/client/src",
			"lib/jsonapi/src"
		]
	},
	"scripts": {
		"post-update-cmd": [
			"@php -r \"file_exists('vendor/buyingsquare/commerce-core/.env') || copy('vendor/buyingsquare/commerce-core/.env.example', 'vendor/buyingsquare/commerce-core/.env');\"",
			"App\\Composer::configure",
			"@php -r \"file_exists('.env') || copy('vendor/buyingsquare/commerce-core/.env', '.env');\""
		]
	}
}
